<%= provide(:title, 'Sell your game') %>
<%= form_for @game do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <fieldset>
    <legend>Sell your game</legend>
    <%= f.label  :name %>
      <div class="input-append">
        <%= f.text_field :name, placeholder: 'Start typing here...', class: 'input-large', data: { url: api_games_path }%>
        <div class='add-on'>
          <i class="icon-search icon-large"></i>
        </div>
      </div>
    <div>
      <%= f.submit "Post", class: "btn" %>
    </div>
  </fieldset>
<% end %>